<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark primary button -->
    <style name="AppTheme.ButtonPrimaryDark">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorBlank</item>
    </style>

    <!-- Primary button -->
    <style name="AppTheme.ButtonPrimary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBlank</item>
    </style>

    <!-- Button accent -->
    <style name="AppTheme.ButtonAccent">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlank</item>
    </style>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
