<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contadorActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.tavares.contador.ContadorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center"
        android:background="@color/colorActivityBackgroundTop">

        <TextView
            android:id="@+id/contadorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorActivityBackgroundBottom">

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight=".20"
            android:text="@string/btnMenos"
            android:onClick="decrement"
            android:textSize="24sp"/>

        <Button
            style="@style/AppTheme.ButtonAccent"
            android:id="@+id/btnZerar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight=".40"
            android:text="Zerar"
            android:onClick="reset"
            android:textSize="24sp"/>

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight=".20"
            android:text="@string/btnMais"
            android:onClick="increment"
            android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>
